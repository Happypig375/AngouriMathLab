<Window x:Class="AngouriGamma.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AngouriGamma"
        mc:Ignorable="d"
        Title="MainWindow" Height="850" Width="800">
    <Grid Margin="0,0,0,-7">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="63*"/>
            <ColumnDefinition Width="37*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="Input" HorizontalAlignment="Center" Margin="0,48,0,0" Text="sin(x)" TextWrapping="Wrap" VerticalAlignment="Top" Width="568" FontSize="14" FontFamily="Sitka Text" KeyDown="OnComputationsRequested" TextChanged="Input_TextChanged" Grid.ColumnSpan="2"/>
        <Image x:Name="OutputInitial" Margin="116,93,0,619" HorizontalAlignment="Left" Width="565" Grid.ColumnSpan="2"/>
        <Image x:Name="OutputSimplified" Margin="116,277,0,435" HorizontalAlignment="Left" Width="565" Grid.ColumnSpan="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="116,248,0,0" Text="Simplified:" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14"/>
    </Grid>
</Window>
